{
  "name": "@vidavidorra/create-project",
  "version": "4.5.46",
  "private": false,
  "description": "Interactively create a GitHub project",
  "keywords": [
    "create",
    "project"
  ],
  "homepage": "https://github.com/vidavidorra/create-project#readme",
  "bugs": {
    "url": "https://github.com/vidavidorra/create-project/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vidavidorra/create-project.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "Jeroen de Bruijn",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "@vidavidorra/create-project": "./dist/cli.js",
    "create-project": "./dist/cli.js"
  },
  "files": [
    "./dist/**/!(*.test).{js,d.ts,cjs}",
    "./.editorconfig",
    "./.github/",
    "./.gitignore",
    "./src/scripts/postinstall.js",
    "./LICENSE.md",
    "./tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**/*.{vue,css,less,scss,html,htm,json,md,markdown,yml,yaml}\" --log-level warn",
    "format:check": "prettier --check \"**/*.{vue,css,less,scss,html,htm,json,md,markdown,yml,yaml}\" --log-level warn",
    "postinstall": "node ./src/scripts/postinstall.js",
    "lint": "npm run format:check && eslint",
    "lint:fix": "npm run format && eslint --fix",
    "prepare": "husky .github/husky",
    "test": "c8 ava"
  },
  "commitlint": {
    "extends": [
      "@vidavidorra"
    ]
  },
  "prettier": "@vidavidorra/prettier-config",
  "release": {
    "extends": "@vidavidorra/semantic-release-config"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  },
  "c8": {
    "all": true,
    "include": [
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "lcovonly",
      "text-summary"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "8.2.1",
    "@vidavidorra/prettier-config": "1.0.6",
    "prettier": "3.8.1",
    "sort-package-json": "3.6.1",
    "typescript": "5.9.3",
    "validate-npm-package-name": "7.0.2",
    "yaml": "2.8.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@ava/typescript": "6.0.0",
    "@commitlint/cli": "20.4.2",
    "@types/node": "24.10.13",
    "@types/sinon": "21.0.0",
    "@types/validate-npm-package-name": "4.0.2",
    "@vidavidorra/commitlint-config": "7.1.14",
    "@vidavidorra/eslint-config": "1.0.3",
    "@vidavidorra/semantic-release-config": "1.0.4",
    "ava": "6.4.1",
    "c8": "10.1.3",
    "eslint": "9.39.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "semantic-release": "25.0.3",
    "sinon": "21.0.1"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
